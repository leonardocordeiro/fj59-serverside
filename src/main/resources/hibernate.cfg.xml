<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/carangos</property>

		<mapping class="br.com.caelum.carangos.modelo.BlogPost" />
		<mapping class="br.com.caelum.carangos.modelo.Usuario" />
		<mapping class="br.com.caelum.carangos.gcm.model.Device" />
		<mapping class="br.com.caelum.carangos.gcm.model.Sender" />

	</session-factory>
</hibernate-configuration>

